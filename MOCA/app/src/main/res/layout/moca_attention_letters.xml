<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    android:background="#ededed">
    <TextView
        android:id="@+id/moca_attention_letters_helptextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/moca_attention_letters_helptext"
        android:gravity="center"
        android:textSize="20sp"

        />

    <RelativeLayout
        android:layout_below="@+id/moca_attention_letters_helptextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0"
            android:padding="15dp"
            >
            <TableRow android:gravity="center"
                android:padding="10dp"
                android:background="#ffffff">
                <TextView
                android:text="@string/moca_attention_letters_q1_labeltext"
                android:layout_width="160dp"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingRight="20dp"
                />

            </TableRow>
            <TableRow
                android:paddingBottom="20dp"
                android:gravity="left">
                <CheckBox
                    android:text="@string/moca_attention_letters_cb"
                    android:id="@+id/moca_attention_letters_q1_mark"/>
                <TextView android:text="@string/moca_attention_letters_correct_label"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:minWidth="40dp"
                    android:id="@+id/moca_attention_letters_num_correct"/>

            </TableRow>
            <TableRow
                android:paddingBottom="20dp"
                android:gravity="center">



            </TableRow>
            <TableRow>
                <CheckBox android:id="@+id/moca_attention_letters_completed" android:text="@string/completed" />
            </TableRow>

        </TableLayout>
    </RelativeLayout>
</RelativeLayout>